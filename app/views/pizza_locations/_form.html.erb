<%= nested_form_for @pizza_location do |f| %>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %><br/>
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :city %><br/>
		<%= f.text_field :city %>
	</div>
	<div class="field">
		<%= f.label :zipcode %><br/>
		<%= f.text_field :zipcode %>
	</div>
	<div class="field">
		<%= f.label :country %><br/>
		<%= f.text_field :country %>
	</div>	
	<%= f.fields_for :photos do |builder| %>
			<% unless builder.object.image_file_name.blank? %>
				<%= image_tag builder.object.image.url(:thumb) %>
			<% else%>
	            <div class='field'>
	                <%= builder.file_field :image %>                
	            </div>
			<% end %>
			<div class="field">
				<%= builder.check_box :primary %> Primary
			</div>
			<div class="field">
				<%= builder.link_to_remove "Remove this document" %>
			</div>
    <% end %>
	<%= f.link_to_add "Add a Photo", :photos %>		
	<div class="actions">
		<%= f.submit "Save"%>
	</div>
<% end %>