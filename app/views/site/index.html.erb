<h1>Featured Locations</h1>
<div class="mt10">
 <% unless @featured_locations.nil? %>
 	<% @featured_locations.each do |location| %>
		<div class="highlight">
			<div class="col-md-3"><img data-src="holder.js/140x140" class="img-rounded" alt="140x140" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 140px; height: 140px;"></div>
			<div class="col-md-9 content">
				<h3><%= link_to location.name, location %></h3>
				<p><%= location.complete_address %></p>				
			</div>
		</div>
	<% end %>
 <% else %>
 <% end %>
</div>